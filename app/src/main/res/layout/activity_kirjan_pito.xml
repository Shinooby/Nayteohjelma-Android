<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="siirtyminenfragmenteilla.app.kotielaintuotannon_alisivut.kirjanPito">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <TextView
            android:layout_marginTop="10dp"
            android:text="Eläinten rekisteröinti ja merkitseminen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <EditText
            android:focusable="false"
            android:id="@+id/elaintenRekisterointiLayout"
            android:layout_width="fill_parent"
            android:layout_height="120dp" />
        
        <TextView
            android:text="Muu tiedonkeruu (mm. eläinten punnitsemiset ja maitonäytteiden otto"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:focusable="false"
            android:id="@+id/muuTiedonkeruuLayout"
            android:layout_width="fill_parent"
            android:layout_height="120dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="Rehu- ja lääkekirjanpito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:focusable="false"
            android:id="@+id/rehuJaLaakekirjanpitoLayout"
            android:layout_width="fill_parent"
            android:layout_height="120dp" />

    </LinearLayout>

</ScrollView>
