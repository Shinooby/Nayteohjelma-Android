<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="siirtyminenfragmenteilla.app.perusfragmentin_alisivut.maatilanLisatiedot">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

    <TextView
        android:text="Yrittäjä ja yrittäjäperhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/yrittäjäJaPerheLayout"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:layout_width="fill_parent"
            android:layout_height="100dp"/>


        <TextView
            android:layout_marginTop="10dp"
            android:text="Tilan yhtiömuoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tilanyhtiomuotoTextBox"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="100dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Tilan työvoima (oma/palkattu)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tilantyovoimaTextBox"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="100dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Tilan yhteiskoneet ja urakointipalvelut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tilanyhteiskoneetjaurakointipalvelutTextBox"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:layout_width="fill_parent"
            android:layout_height="100dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Tilan muut koneet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tilanmuutkoneetTextBox"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:layout_width="fill_parent"
            android:layout_height="100dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Keskimääräinen hehtaarisato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/keskimääräinenHehtaarisatoTextBox"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="100dp"/>
    </LinearLayout>

</ScrollView>
