<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:id="@+id/usernamelayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/kayttajatunnuslabelid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kayttajatunnuslabel"/>

        <EditText
            android:id="@+id/usernametext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/salasanalabel"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/checkboxlayout"
        android:layout_below="@+id/usernamelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/muistatunnukset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Muista käyttäjätunnus ja salasana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/kirjautumisbutton"
        android:text="@string/kirjautumisbuttontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkboxlayout"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:layout_below="@+id/kirjautumisbutton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

    </LinearLayout>

</RelativeLayout>