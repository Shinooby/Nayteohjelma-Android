<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="siirtyminenfragmenteilla.app.metsatalouden_alisivut.metsikonPerustiedot">

    <TextView
        android:text="Mitä metsä- ja kasvupaikkatyyppiä tilalla on eniten pinta-alasta?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_margin="10dp"
        android:focusable="false"
        android:id="@+id/metsaJaKasvupaikkatyypitLayout"
        android:layout_width="fill_parent"
        android:layout_height="120dp" />

    <TextView
        android:text="Mitä metsikön kehitysluokkaa tilalla on eniten pinta-alasta?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_margin="10dp"
        android:focusable="false"
        android:id="@+id/metsikonKehitysluokkaaEnitenLayout"
        android:layout_width="fill_parent"
        android:layout_height="120dp" />

    <ImageButton
        android:id="@+id/metsanKehitysluokatButton"
        android:background="@null"
        android:src="@drawable/forestdevclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
