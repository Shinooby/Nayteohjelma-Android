<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="siirtyminenfragmenteilla.app.kotielaintuotannon_alisivut.tuotteetAlisivu">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <TextView
        android:text="Tuotteiden laatuvaatimukset, laatuluokitteluperusteet ja tuottajalle maksettavan hinnan määräytyminen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <EditText
            android:focusable="false"
            android:id="@+id/tuotteidenLaatuvaatimuksetYMLayout"
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_height="120dp" />

        <TextView
            android:text="Tee esimerkkilaskelma hinnan määräytymisestä"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:focusable="false"
            android:id="@+id/laskelmaHinnanMääräytymisestä"
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_height="120dp" />

        <TextView
            android:text="Mitä toimenpiteitä tilalla tehdään laadun varmistamiseksi?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:focusable="false"
            android:id="@+id/toimenpiteetLaadunVarmistamiseksiLayout"
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_height="120dp" />

    </LinearLayout>
</ScrollView>
