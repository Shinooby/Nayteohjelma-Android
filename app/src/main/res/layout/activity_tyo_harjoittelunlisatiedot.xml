<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="siirtyminenfragmenteilla.app.perusfragmentin_alisivut.tyoHarjoittelunlisatiedot">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


    <TextView
        android:layout_margin="10dp"
        android:text="Harjoittelun alkamispäivämäärä"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <EditText
            android:focusable="false"
            android:id="@+id/beginDateLayout"
            android:layout_width="fill_parent"
            android:layout_height="40dp" />

            <TextView
            android:text="Harjoittelun päättymispäivä"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/endDateLayout"
            android:focusable="false"
            android:layout_width="fill_parent"
            android:layout_height="40dp" />
        <TextView
            android:layout_margin="10dp"
            android:text="Harjoittelun pituus työtunteina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/harjoittelunPituusEditText"
            android:focusable="false"
            android:layout_width="fill_parent"
            android:layout_height="40dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Harjoittelun valvoja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/HarjoittelunValvojaEditText"
            android:focusable="false"
            android:layout_width="fill_parent"
            android:layout_height="40dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Harjoittelun valvojan puhelinnumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/HarjoittelunValvojanPuhelinnroEditText"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:layout_height="40dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Harjoittelun valvojan sähköpostiosoite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/HarjoittelunvalvojansähköpostiosoiteEditText"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:layout_height="40dp"/>

        <TextView
            android:layout_margin="10dp"
            android:text="Harjoittelijan henkilöturvatunnus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/HarjoittelijanHenkiloturvatunnusEditText"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:layout_height="40dp"/>

        <TextView
            android:layout_margin="10dp"
            android:text="Harjoittelijan osoite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/HarjoittelijanOsoiteEditText"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:layout_height="40dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Harjoittelijan postinumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/harjoittelijanPostinumeroEditText"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:layout_height="40dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Harjoittelijan kotikunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/harjoittelijanKotikuntaEditText"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:layout_height="40dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Harjoittelijan sähköpostiosoite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/harjoittelijanSähköpostiOsoiteEdittext"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:layout_height="40dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Lisätietoa (harjoittelussa huomioitavat asiat)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/lisätietoa_harjoittelussa_huomioitavaaEditxt"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:layout_height="80dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Muut opinnot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/muutOpinnotEdittxt"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:layout_height="80dp"/>

    </LinearLayout>
</ScrollView>
