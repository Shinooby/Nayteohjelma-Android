<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/list_row_selector"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <!-- Päivämäärä -->
    <TextView
        android:id="@+id/listItemPvm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Päivämäärä"
        android:textSize="@dimen/title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listItemTuntimäärä"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listItemPvm"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Tuntimäärä"/>

    <!-- Selite -->
    <TextView
        android:id="@+id/työajanseliteLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listItemPvm"
        android:layout_marginTop="1dip"
        android:text="Selite"
        android:textSize="@dimen/rating" />

    <TextView
        android:id="@+id/tyoajanIDpiilotettu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/year"
        android:textSize="@dimen/year"
        android:text="Testi"/>


</RelativeLayout>