                android:layout_weight="1"
                android:src="@drawable/tuotantorakennukset"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="2">

            <ImageButton
                android:background="@null"
                android:id="@+id/tuotantorakennustenTekniikkaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tuotantorakennustentekniikka"/>
            <ImageButton
                android:background="@null"
                android:id="@+id/viljeltavatKasvitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/viljeltavatkasvit"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <ImageButton
            android:background="@null"
            android:id="@+id/rakennusprojektitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/rakennusprojektit" />

        <ImageButton
            android:background="@null"
            android:id="@+id/tyoTurvallisuusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/worksafety" />


    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">

            <TextView
                android:id="@+id/perustiedotArviointiEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ei kÃ¤sitelty"
